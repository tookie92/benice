

<%= simple_form_for(resource, as: resource_name,:html => { class: "user"} ,url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="form-group">

      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control form-control-user", id: "exampleInputEmail" } %>

    </div>
    <div class="form-group">

          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control form-control-user", id: "exampleInputPassword" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
